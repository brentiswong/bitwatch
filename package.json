{
  "name": "bitwatch",
  "version": "1.6.11",
  "description": "Bitcoin address monitor, using mempool.space api",
  "main": "server/index.js",
  "private": true,
  "type": "module",
  "scripts": {
    "setup": "npm i -g nodemon concurrently && npm i && cd client && npm i",
    "test": "eslint . --max-warnings=0 && npm run test:e2e",
    "test:generate": "node server/scripts/generate-test-data.js",
    "test:prepare": "npm run test:generate && npm test",
    "test:e2e": "NODE_NO_WARNINGS=1 node node_modules/@playwright/test/cli.js test && npm run test:cleanup",
    "test:e2e:debug": "NODE_NO_WARNINGS=1 node node_modules/@playwright/test/cli.js test --debug && npm run test:cleanup",
    "test:e2e:ui": "NODE_NO_WARNINGS=1 node node_modules/@playwright/test/cli.js test --ui",
    "test:e2e:codegen": "NODE_NO_WARNINGS=1 node node_modules/@playwright/test/cli.js codegen http://localhost:3119",
    "test:cleanup": "mv server/data/db.backup server/data/db.json 2>/dev/null || rm -f server/data/db.json",
    "dev:server": "nodemon --config nodemon.json server/index.js",
    "dev:client": "cd client && npm start",
    "dev": "rm server/data/db.json 2>/dev/null && concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "start": "node server/index.js"
  },
  "author": "zap-o-matic",
  "license": "ISC",
  "dependencies": {
    "@mempool/mempool.js": "^3.0.0",
    "async": "^3.2.6",
    "bip32": "^4.0.0",
    "bitcoinjs-lib": "^6.1.7",
    "bs58check": "^4.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "node-telegram-bot-api": "^0.66.0",
    "socket.io": "^4.8.1",
    "tiny-secp256k1": "^2.2.3"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/eslint-parser": "^7.27.1",
    "@babel/plugin-transform-runtime": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@eslint/js": "^9.26.0",
    "@playwright/test": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "ws": "^8.18.2"
  }
}
