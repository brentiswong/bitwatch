{
  "name": "bitwatch",
  "version": "1.6.0",
  "description": "Bitcoin address monitor, using mempool.space api",
  "main": "server/index.js",
  "private": true,
  "type": "module",
  "scripts": {
    "setup": "npm i -g nodemon concurrently && npm i && cd client && npm i",
    "test": "NODE_NO_WARNINGS=1 node node_modules/jest/bin/jest.js",
    "test:watch": "NODE_NO_WARNINGS=1 node node_modules/jest/bin/jest.js --watch",
    "test:generate": "node server/scripts/generate-test-data.js",
    "test:prepare": "npm run test:generate && npm test",
    "test:e2e": "NODE_NO_WARNINGS=1 node node_modules/@playwright/test/cli.js test",
    "test:e2e:debug": "NODE_NO_WARNINGS=1 node node_modules/@playwright/test/cli.js test --debug",
    "test:e2e:ui": "NODE_NO_WARNINGS=1 node node_modules/@playwright/test/cli.js test --ui",
    "test:e2e:codegen": "NODE_NO_WARNINGS=1 node node_modules/@playwright/test/cli.js codegen http://localhost:3119",
    "dev:server": "nodemon --config nodemon.json server/index.js",
    "dev:client": "cd client && npm start",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "start": "node server/index.js"
  },
  "author": "zap-o-matic",
  "license": "ISC",
  "dependencies": {
    "@mempool/mempool.js": "^3.0.0",
    "async": "^3.2.5",
    "bip32": "^3.1.0",
    "bitcoinjs-lib": "^6.1.0",
    "cors": "^2.8.5",
    "ecpair": "^2.1.0",
    "express": "^4.19.2",
    "node-telegram-bot-api": "^0.66.0",
    "socket.io": "^4.7.5",
    "tiny-secp256k1": "^2.2.3"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/eslint-parser": "^7.24.7",
    "@babel/plugin-transform-modules-commonjs": "^7.24.0",
    "@babel/plugin-transform-runtime": "^7.27.1",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/runtime": "^7.27.1",
    "@playwright/test": "^1.42.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "babel-jest": "^29.7.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nock": "^14.0.4",
    "socket.io-client": "^4.7.5"
  }
}
